@{
    ViewData["Title"] = "Мандруй навколо";

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>

        <style>
            body {
                font-family: Garamond, serif;
                background-color: #EEE8AA;
                margin: 20px;
                overflow: auto;
                color-scheme: auto;              
            }


            .full-screen-image {
                width: 70%;
                height: auto; /* Автоматично змінюємо висоту зображення */
                max-height: calc(70vh - 50px); /* Задаємо максимальну висоту зображення, вираховану від висоти екрану мінус висота заголовка */
                object-fit: cover; /* Заповнити весь контейнер, зберігаючи пропорції */
                border: 5px solid black;
                margin-bottom: 20px; /* Додаємо відступ вниз */
            }


            .center {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh; /* Вирівняти картинку по центру */
            }

        </style>
    </head>
<body>
        <CENTER>
            <H1>
                <FONT FACE="Decor, Arbat, Kudriashov"
                      SIZE=30 COLOR="Maroon">

                    Welcome to our site!
                    <br /> <!-- Додаємо перехід на новий рядок -->
                    We're pleasure to see you ^.^


                </FONT>
            </H1>

        <div class="center">
            <img class="full-screen-image" src="https://th.bing.com/th/id/OIG4.a.LAhjhcTjhl24m8WIbg?pid=ImgGn" />
           
        </div>
</body>
   }
 
