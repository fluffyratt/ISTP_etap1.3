@model FlightDomain.Model.Ticket

@{
    ViewData["Title"] = "Details";
}

<h1>Детальна інформація</h1>

<div>
    <h4>Квиток</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriesFlights)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriesFlights.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">
        <button type="button" class="btn btn-primary">Редагувати</button>
    </a>

    <a asp-action="Index">
        <button type="button">Назад до квитків</button>
    </a>
</div>
