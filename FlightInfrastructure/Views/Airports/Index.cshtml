@model IEnumerable<FlightDomain.Model.Airport>

@{
    ViewData["Title"] = "Аеропорти";
}

<h1>АЕРОПОРТИ</h1>
<p>
    <a asp-action="Create">Створити новий аеропорт</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City.Name)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детальна інформація</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a> |
                <a asp-action="ArrivalAirport" asp-route-id="@item.Id">Рейси прибуття</a> |
                <a asp-action="DepartureAirport" asp-route-id="@item.Id">Рейси відбуття</a>
           </td>
        </tr>
}
    </tbody>
</table>
