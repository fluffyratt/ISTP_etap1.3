

@model IEnumerable<FlightDomain.Model.Flight>

@{
    ViewData["Title"] = "Авіарейси";
}

<style>
    .edit-btn {
        background-color: lightcyan;
        color: black;
    }

    .details-btn {
        background-color: lightcyan;
        color: black;
    }

    .delete-btn {
        background-color: lightcyan;
        color: black;
    }
</style>

<h1>АВІАРЕЙСИ</h1>

<p>
    <a asp-action="Create">Cтворити новий авіарейс</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalAiroportNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureAiroportNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalAiroportNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureAiroportNavigation.Name)
            </td>
            <td>
                    <button type="button" class="edit-btn rounded-circle" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'">Редагувати</button> |
                    <button type="button" class="details-btn rounded-circle" onclick="location.href='@Url.Action("Details", new { id = item.Id })'">Детальна інформація</button> |
                    <button type="button" class="delete-btn rounded-circle" onclick="location.href='@Url.Action("Delete", new { id = item.Id })'">Видалити</button> |
            </td>
        </tr>
}
    </tbody>
</table>
